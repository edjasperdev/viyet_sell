= form_for(@product) do |f|
	= f.label :name, 'Product Name'
	%br 
	= f.text_field :name, :placeholder => "Name the product"
	%br 
	= f.label :original_price, 'Original Price'
	%br 
	= f.text_field :original_price, :placeholder => "Original item price?"
	%br 
	= f.label :price, 'What would you like to sell for? (Must be between $1,000 and $10,000)'
	%br 
	= f.text_field :price, :placeholder => "Selling Price"
	%br 
	= f.submit 


