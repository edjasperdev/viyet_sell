<div class="row setup-content" id="step-1">
<div class="col-xs-12">
<div class="col-md-12">
%h3 Step 1

<div class="form-group">
= form_for(@product, method: :post) do |f|
	= f.label :name, 'Product Name', :class => "control-label"
	%br 
	= f.text_field :name, :placeholder => "Name the product", :class => "control-label"
	%br 
	= f.label :original_price, 'Original Price', :class => "control-label"
	%br 
	= f.text_field :original_price, :placeholder => "Original item price?", :class => "control-label"
	%br 
	= f.label :price, 'What would you like to sell for? (Must be between $1,000 and $10,000)', :class => "control-label"
	%br 
	= f.text_field :price, :placeholder => "Selling Price", :class => "control-label"
	%br 
	= f.submit "Next", :class => "btn btn-primary btn-lg pull-right" 
</div>
</div>
</div>



